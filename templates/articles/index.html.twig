{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}
	<br>
<h1>Articles</h1>

	{% if articles %}

		<table id="articles" class="table table-hover">

		  <thead>
		    <tr>
		      <th scope="col">Name</th>
		      <th scope="col">Content</th>
		    </tr>
		  </thead>

		  <tbody>
		  	{% for article in articles %}
				 <tr class="table-active">
			      	<td>{{ article.title }}</td>
			      	<td><a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
			      		<a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
			      		<a href="#" class="btn btn-danger delete-article" data-id="{{article.id}}">Delete</a></td>
			    </tr>
		  	{% endfor %}
		   </tbody>

		</table>

	{% else %}
		<p>No articles to display.</p>
	{% endif %}

{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="/js/main.js"></script>
{% endblock %}